description "{{ jeto_application_description }}"
start on runlevel [2345]
stop on runlevel [06]
respawn

env UWSGI=/usr/local/bin/uwsgi
env LOGTO=/var/log/{{ jeto_application_name }}/emperor.log

exec $UWSGI --master --emperor {{ jeto_home }}/vassals --die-on-term --uid {{ jeto_user }} --gid {{ jeto_user }} --logto $LOGTO
