description "{{ vagrant_control_application_description }}"
start on runlevel [2345]
stop on runlevel [06]
respawn

env UWSGI=/usr/local/bin/uwsgi
env LOGTO=/var/log/{{ vagrant_control_application_name }}/emperor.log

exec $UWSGI --master --emperor {{ vagrant_control_home }}/vassals --die-on-term --uid {{ vagrant_control_user }} --gid {{ vagrant_control_user }} --logto $LOGTO
