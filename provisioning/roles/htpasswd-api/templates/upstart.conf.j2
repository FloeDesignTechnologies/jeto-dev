description "{{ htpasswd_api_application_description }}"
start on runlevel [2345]
stop on runlevel [06]
respawn

env UWSGI=/usr/local/bin/uwsgi
env LOGTO=/var/log/{{ htpasswd_api_application_name }}/emperor.log

exec $UWSGI --master --emperor {{ htpasswd_api_home }}/vassals --die-on-term --uid {{ htpasswd_api_user }} --gid {{ htpasswd_api_user }} --logto $LOGTO
